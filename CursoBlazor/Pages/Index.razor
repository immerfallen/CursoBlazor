@page "/"

<PageTitle>Index</PageTitle>

<h1>Olá, @nome</h1>
<h1>Data e hora: @DateTime.Now</h1>
<h1>Dia da Semana: @data</h1>
<hr/>
<h1>@Saudacao(nome)</h1>
<h1>2+2 = @(2+2) </h1>
<hr/>
<button @onclick="@TrataCliqueBotao">Clique aqui</button>


@code {
    string nome = "Maro";
    private string data = DateTime.Now.DayOfWeek.ToString();

    private string Saudacao(string nome)
    {
        var mensagem = "Bem-vindo" + nome.ToUpper();

        return mensagem;
    }

    private void TrataCliqueBotao()
    {
        Console.WriteLine();
    }
}

